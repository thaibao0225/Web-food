@model Food.Entity.Products

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin/_LayoutAdmin.cshtml";
}

<h1>Create</h1>

<h4>Products</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="pd_Name" class="control-label"></label>
                <input asp-for="pd_Name" class="form-control" />
                <span asp-validation-for="pd_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="pd_Description" class="control-label"></label>
                <input asp-for="pd_Description" class="form-control" />
                <span asp-validation-for="pd_Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="pd_Price" class="control-label"></label>
                <input asp-for="pd_Price" class="form-control" />
                <span asp-validation-for="pd_Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="pd_ReducePrice" class="control-label"></label>
                <input asp-for="pd_ReducePrice" class="form-control" />
                <span asp-validation-for="pd_ReducePrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="pd_Img1" class="control-label"></label>
                <input asp-for="pd_Img1" class="form-control" />
                <span asp-validation-for="pd_Img1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="pd_Img2" class="control-label"></label>
                <input asp-for="pd_Img2" class="form-control" />
                <span asp-validation-for="pd_Img2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="pd_Img3" class="control-label"></label>
                <input asp-for="pd_Img3" class="form-control" />
                <span asp-validation-for="pd_Img3" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="pd_Img4" class="control-label"></label>
                <input asp-for="pd_Img4" class="form-control" />
                <span asp-validation-for="pd_Img4" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="pd_Rate" class="control-label"></label>
                <input asp-for="pd_Rate" class="form-control" />
                <span asp-validation-for="pd_Rate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="pd_ShortDescription" class="control-label"></label>
                <input asp-for="pd_ShortDescription" class="form-control" />
                <span asp-validation-for="pd_ShortDescription" class="text-danger"></span>
            </div>
             <div class="form-group" >
                <select name="CategoriesSelect" class ="form-control">
                    @foreach (var item in @ViewBag.CategoriesList)
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <a style="color:red"> @ViewBag.thongbao </a>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

