@model Food.Entity.Coupons

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin/_LayoutAdmin.cshtml";
}

<h2>Edit</h2>

<h4>Coupons</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="couponId" />
            <div class="form-group">
                <label asp-for="couponCode" class="control-label"></label>
                <input asp-for="couponCode" class="form-control" />
                <span asp-validation-for="couponCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="couponPrice" class="control-label"></label>
                <input asp-for="couponPrice" class="form-control" />
                <span asp-validation-for="couponPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

